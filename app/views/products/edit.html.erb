<div class="row">
  <div class="small-9 small-centered columns yellow">

    <%= form_for(:product, url: user_product_path(current_user, @product), method: :patch, :html => { :multipart => true }) do |f| %>
      <p>
        <%= f.file_field :photo %>
      </p>
      <p>
        <%= f.label :price %>
        <%= f.text_field :price %>
      </p>
      <p>
        <%= f.label :description %>
        <%= f.text_area :description %>
      </p>
      <p>
        <%= f.submit :value => 'Post Product', :class => 'button radius' %>
      </p>
    <% end %>

  </div>
</div>