<div class="row">
  <div class="small-9 small-centered columns yellow">

    <%= form_for([current_user, current_user.products.build], :html => { :multipart => true }) do |f| %>
      <p>
        <%= f.file_field :photo %>
      </p>
      <p>
        <%= f.label :company_name %>
        <%= f.text_field :company_name %>
      </p>
      <p>
        <%= f.label :company_url %>
        <%= f.text_field :company_url %>
      </p>
      <p>
        <%= f.label :facebook_url %>
        <%= f.text_field :facebook_url %>
      </p>
      <p>
        <%= f.label :twitter_url %>
        <%= f.text_field :twitter_url %>
      </p>
      <p>
        <%= f.label :product_name %>
        <%= f.text_field :product_name %>
      </p>
      <p>
        <%= f.label :price %>
        <%= f.text_field :price %>
      </p>
      <p>
        <%= f.label :description %>
        <%= f.text_area :description %>
      </p>
      <p>
        <%= f.submit :value => 'Post Product', :class => 'button radius' %>
      </p>
    <% end %>

  </div>
</div>
